<hr>


<div class="container-md" id="show">
        
            <div class="box">
                <button>CHECK LOCAL WEATHER</button>
                <h1>TRIP DETAILS</h1>
            <h3><%= trip.departure %> &#8594 <%= trip.destination %></h3>       
            <br>
            <h3><%= trip.start %> &#8594 <%= trip.end %></h3> 
           
            </div>  
            <div class="box">
                
            <% if (trip.owner?._id.equals(user?._id)) { %>
                <div class="container">
                    <a href="/trips/edit/<%=trip.id%>" class="btn btn-info">
                        Edit trip to <%= trip.destination %>
                    </a>
                    <form action="/trips/<%= trip._id %>?_method=DELETE" method="POST">
                        <input type="submit" class="btn btn-danger m-3" value="Delete <%= trip.destination %>">
                    </form>
                </div>

                <% }%>
               
            </div> 
        
   
    <div class="box">
    <hr>





    
    <% if (user) { %>
        <div class="col-md-6">
            <form action="/stops/<%=trip.id%>" method="POST">
                <fieldset>
                    <legend> <h3>ADD A STOP</h3></legend>
                    <label class="form-label">STOP</label>
                    <input class="form-control mb-1"
                    type="text" name="food">
                    <input type="submit" class="btn btn-light">
                </fieldset>

            </form>
        </div>

        <% }%>
        <% if (trip.stops.length) { %>
           
                <% trip.stops.forEach(stop => { %>
                
                        
                            <p> <%= stop.food %> </p>
                            <div class="d-flex justify-content-between">
                                <small >
                                    Added by: <%= stop.author.name %> </small>
                                    <% if(user && stop.author?._id == user.id) { %>
                                    <form action="/stops/<%= trip._id%>/<%= stop._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-outline-danger-sm" value="x">
                                    
                                    <% } %>
    
                               
                            </div>
    
                        
                    
                    <% }) %>
            
    
        <% } else { %>
    
            <p3>no stops added</p3>
    
        <% } %>
</div>


<div class="box">

    <h3> dont forget</h3>
    <div class="col-md-6">
        <form action="/essentials/<%=trip.id%>" method="POST">
            <fieldset>
                <legend> ADD AN ESSENTIAL</legend>
                <label class="form-label">STOP</label>
                <input class="form-control mb-1"
                type="text" name="essentials">
                <input type="submit" class="btn btn-success">
            </fieldset>

        </form>
        <% if (trip.essentials) { %>
                <% trip.essentials.forEach(essential => { %>
                  
                            <p> <%= essential %> </p>
                            <% })%>
                            <% }%>
    </div>
    
</div>
</div>







